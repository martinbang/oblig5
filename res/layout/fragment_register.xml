<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView_register_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_fragment_label_username" />

    <EditText
        android:id="@+id/editText_register_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" 
        android:inputType="text" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/button_register_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_fragment_button_login" />

</LinearLayout>