<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/track"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="74dp" 
        android:background="#d3d3d3">

        <CheckBox
            android:id="@+id/checkBoxSatteliteView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/check_sattelite_view" />

        <CheckBox
            android:id="@+id/checkBoxStreetView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/checkBoxSatteliteView"
            android:text="@string/check_street_view" />
       
    </RelativeLayout>

   
   
      <com.google.android.maps.MapView
	  xmlns:android="http://schemas.android.com/apk/res/android"
	  android:id="@+id/map_view"
	  android:layout_width="fill_parent"
	  android:layout_height="fill_parent"
	  android:clickable="true"
	  android:enabled="true"
	  android:apiKey="0cGLoFe2hCC14k_nHkjMcMOZch_pHVjLtLcp_5g" />
    

</LinearLayout>